<?xml version="1.0" ?>
<argos-configuration>

	<!-- ************************* -->
	<!-- * General configuration * -->
	<!-- ************************* -->
	<framework>
		<system threads="0" />
		<experiment length="0" ticks_per_second="10" random_seed="124" />
	</framework>

	<!-- *************** -->
	<!-- * Controllers * -->
	<!-- *************** -->
	<controllers>

		<footbot_diffusion_controller id="fdc"
			library="build/controllers/libck_footbot_diffusion.so">
			<actuators>
				<differential_steering implementation="default" />
				<leds implementation="default" medium="leds" />
				<range_and_bearing implementation="default" />
			</actuators>
			<sensors>
				<footbot_proximity implementation="default"
					show_rays="true" />
				<positioning implementation="default" />
				<range_and_bearing implementation="medium" medium="rab" />
			</sensors>
			<params alpha="7.5" delta="0.1" velocity="5" />
		</footbot_diffusion_controller>

	</controllers>
	
	<!-- ****************** -->
	<!-- * Loop functions * -->
	<!-- ****************** -->
	<loop_functions library="build/loop_functions/libloop_functions.so" label="swarmspaces_loop_functions" outfile="test.dat"
		robots="15" data_size="200" density="1" walls="true" />

	<!-- *********************** -->
	<!-- * Arena configuration * -->
	<!-- *********************** -->
	<arena size="30, 30, 4" center="0,0,2" />
	
