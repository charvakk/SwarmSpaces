	<!-- ******************* -->
	<!-- * Physics engines * -->
	<!-- ******************* -->
	<physics_engines>
		<dynamics2d id="dyn2d" />
	</physics_engines>

	<!-- ********* -->
	<!-- * Media * -->
	<!-- ********* -->
	<media>
		<led id="leds" />
		<range_and_bearing id="rab" />
	</media>

	<!-- ****************** -->
	<!-- * Visualization * -->
	<!-- ****************** -->
	<visualization>
		<qt-opengl />
	</visualization>

